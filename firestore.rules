rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow get: if true; // Public read for extension API (stats check)
      // Strict: Only owner can list or write
      allow list, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // SAVED ITEMS COLLECTION
    match /savedItems/{itemId} {
      allow read: if true; // Public check for existence
      // Strict: Only owner can create
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Strict: Only owner can update/delete
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Deny access to everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
